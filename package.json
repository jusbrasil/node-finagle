{
  "name": "smart-promises",
  "version": "0.0.1",
  "description": "node promise playground",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib/"
  },
  "scripts": {
    "build": "babel --stage 0 src --out-dir lib",
    "coverage": "nyc npm run test:strict",
    "coverage:report": "nyc report --reporter=lcov npm run test:strict",
    "flow": "flow check src/",
    "lint": "eslint --ext .js src",
    "test": "npm run lint && npm run flow && npm run coverage",
    "test:strict": "mocha ./src/__tests__/*.js",
    "test:watch": "watch-spawn -i -p './src/__tests__/*.js' -p './src/*.js' 'mocha ./src/__tests__/*.js'"
  },
  "author": "JusBrasil Team <dev@jusbrasil.com.br>",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/jusbrasil/smart-promises.git"
  },
  "bugs": {
    "url": "https://github.com/jusbrasil/smart-promises/issues"
  },
  "homepage": "https://github.com/jusbrasil/smart-promises",
  "dependencies": {
    "CBuffer": "^2.0.0",
    "babel-plugin-syntax-flow": "6.8.0",
    "babel-plugin-transform-flow-strip-types": "6.8.0",
    "bluebird": "^3.4.1",
    "measured": "^1.1.0",
    "native-hdr-histogram": "^0.3.3"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-cli": "6.8.0",
    "babel-core": "6.8.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.4",
    "babel-plugin-add-module-exports": "0.1.4",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "dirty-chai": "1.2.2",
    "eslint": "3.1.1",
    "eslint-config-airbnb-base": "4.0.2",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-import": "1.11.0",
    "flow-bin": "0.26.0",
    "istanbul": "0.4.3",
    "mocha": "2.4.5",
    "mockery": "1.6.2",
    "nyc": "6.4.4",
    "sinon": "1.17.4",
    "sinon-chai": "2.8.0",
    "sinon-stub-promise": "2.0.0",
    "watch-spawn": "1.0.6"
  },
  "nyc": {
    "exclude": [
      "**/__tests__/*.js",
      "**/__mocks__/*.js"
    ]
  }
}
